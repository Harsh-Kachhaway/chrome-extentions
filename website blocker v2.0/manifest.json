{
  "manifest_version": 3,
  "name": "v2 Focus Mode: Website Blocker",
  "version": "2.0",
  "description": "Block distracting websites and stay focused!",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs",
  "scripting",
  "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }

}
